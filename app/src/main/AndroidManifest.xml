<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ai.tomorrow.photory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ai.tomorrow.photory.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ai.tomorrow.photory.Search.SearchActivity"
            android:windowSoftInputMode="adjustNothing"></activity>
        <activity android:name="ai.tomorrow.photory.Likes.LikesActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Share.ShareActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Profile.ProfileActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Profile.AccountSettingsActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Login.LoginActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Login.RegisterActivity"></activity>
        <activity android:name="ai.tomorrow.photory.Share.NextActivity"></activity>
    </application>

</manifest>